<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMiniProgramCard"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ti_shape_white_round_card_message_bg"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tvCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="承运日期：6月11日"
        android:textColor="#FF595959"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="商品名称：石子"
        android:layout_marginBottom="2dp"
        android:textColor="#FF595959"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="8dp"
                android:background="@drawable/ti_shape_card_blue_oval"
                android:layout_height="8dp" />

            <View
                android:layout_width="1dp"
                android:background="#1A000000"
                android:layout_marginTop="3dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSenderName"
            android:text="测试多行测试多行测试多行测试多行"
            android:textSize="16sp"
            android:textColor="#FF262626"
            android:lineHeight="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:background="#1A000000"
        android:layout_marginLeft="3.5dp"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginRight="6dp"
            android:layout_width="8dp"
            android:layout_height="28dp"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:background="#1A000000"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ti_shape_card_red_oval" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvRecipientName"
            android:text="测试单行"
            android:layout_width="wrap_content"
            android:lineHeight="28dp"
            android:paddingTop="2dp"
            android:textColor="#FF262626"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvGoodsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="128.00元/吨"
        android:textColor="#FF4385FF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGoodsQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/ti_shape_blue_round_btn_bg"
        android:gravity="center"
        android:minWidth="80dp"
        android:minHeight="24dp"
        android:paddingHorizontal="10dp"
        android:text="可接1车"
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="#0F000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="订单编号：67800006665778"
            android:textColor="#FF595959"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivCopy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:src="@mipmap/ti_grey_copy_icon" />

    </LinearLayout>

</LinearLayout>